{
  "functions": {
    "api/convert.js": {
      "memory": 1536,
      "maxDuration": 60
    }
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/convert$", "dest": "/api/convert" },
    { "src": "^/health$", "dest": "/api/health" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^(?!/api/)(.*)$", "dest": "/public/$1" }
  ]
}
